<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="VeryBigTextView">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="PrimarySmallTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PrimaryTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PrimaryBigTextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PrimarySmallTextButton">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryEditText">
        <item name="android:textColorHint">@color/white_90</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>
